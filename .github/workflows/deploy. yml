name: Deploy to GitHub Pages

on:
  push:
    branches: ["main"] # Ensure this matches your branch name (main or master)

permissions:
  contents: write
  pages: write
  id-token: write

jobs:
  build-and-deploy:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout Code
        uses: actions/checkout@v4

      - name: Inject API Keys
        run: |
          sed -i "s/REPLACE_TOMTOM_KEY/${{ secrets.TOMTOM_API_KEY }}/g" app.js
          sed -i "s/REPLACE_GEMINI_KEY/${{ secrets.GEMINI_API_KEY }}/g" app.js

      - name: Setup Pages
        uses: actions/configure-pages@v4

      - name: Upload Artifact
        uses: actions/upload-pages-artifact@v3
        with:
          path: '.'

      - name: Deploy to GitHub Pages
        id: deployment
        uses: actions/deploy-pages@v4
